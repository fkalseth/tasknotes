@inherits System.Web.Mvc.WebViewPage<TaskNotes.Domain.NewDueDateViewModel>

@{
    View.Title = "Postpone this stuff, it can wait";
    LayoutPage = "~/Views/Shared/_Master.cshtml";
}
	
	@Html.ValidationMessageFor(m => m.NewDueDate)
	
	<form action="/Task/Postpone/@Model.TaskId" method="post">
		
		<div class="task">
	
			<span>
				Due @Html.TextBoxFor(m => m.NewDueDate) 
			</span>
			<p>@Model.Description</p>
	
		</div>
					
		<div class="footer">		
					
			<input type="submit" id="okButton" value="Postpone task" />
			<a href="/Tasks/All">Cancel</a>
		</div>
	
	</form>