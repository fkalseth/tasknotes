@inherits System.Web.Mvc.WebViewPage

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Tasks - @View.Title</title>

	<link rel="stylesheet" href="/Content/css/screen.css" type="text/css" media="screen, projection">

    <script src="/Scripts/date.js" type="text/javascript"></script>

    <script src="/Scripts/jquery-1.4.1.min.js" type="text/javascript"></script>
    <script src="/Scripts/MicrosoftAjax.js" type="text/javascript"></script>
    <script src="/Scripts/MicrosoftMvcValidation.js" type="text/javascript"></script>
    <script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>
	<script src="/Scripts/jquery.watermark.min.js" type="text/javascript"></script>
    	
    <script type="text/javascript">
	
	$(function()
	{
		$("#Due").change(function()
		{
			this.value = Date.parse(this.value).toString('HH:mm dddd d. MMMM');		
		})
		.click(function(){ this.select(); })
		.watermark("Set due date here");
		
		$("#Description").watermark("Write task description here");
		
	});
	
	</script>

</head>
<body>	
    <div>
		<h1>@View.Title</h1>
		@Html.ValidationMessage("Command")
		@RenderBody()
    </div>
</body>
</html>
